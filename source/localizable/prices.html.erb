---
title: navigation.prices.text
breadcrumbs:
  - navigation.prices.text
---

<div class="page-content">
	<div class="container">
		<h1 class="title-underline"><%= t('prices.title') %></h1>
		<p class="text-center info-text"><%= t('prices.intro') %></p>
	</div>
	<div class="container">
		<div class="row product-box-mobile arrow-on-white">
			<div class="col-md-6">
				<div class="product-box animation" data-animation="fadeIn" data-animation-delay="0.5s">
					<span class="icon icon-shirt"></span>
					<h3 class="title"><%= t('prices.featured.shirts.title') %></h3>
				</div>
			</div>

			<div class="col-md-6">
				<div class="product-box animation" data-animation="fadeIn" data-animation-delay="0s">
					<span class="icon icon-bag"></span>
					<h3 class="title"><%= t('prices.featured.laundry.title') %></h3>
				</div>
			</div>

			<div class="col-md-6">
				<div class="product-box animation" data-animation="fadeIn" data-animation-delay="0s">
					<span class="icon icon-express-delivery"></span>
					<h3 class="title"><%= t('prices.featured.delivery.title') %></h3>
					<h6 class="description"><%= t('prices.featured.delivery.info') %></h3>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="prices-tabs">
			<div class="panel" role="tablist">
				<% t('prices.list').each do |prices_block| %>
					<% block_id = "price_block_#{t('prices.list').index(prices_block)}" %>

					<div class="panel-heading" role="tab">
						<h4 class="panel-title"><a role="button" data-toggle="collapse" href="#<%= block_id %>"><%= prices_block[:title] %></a></h4>
					</div>

					<div id="<%= block_id %>" class="panel-collapse collapse" role="tabpanel">
						<div class="panel-body">
							<div class="table-price">
								<table>
									<tbody>
										<% prices_block[:items].each do |item| %>
											<tr>
												<td><%= item[:title] %></td>
												<td><%= item[:price] %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<% content_for :js_tags do %>
	<!--[if lt IE 9]>
		<%= javascript_include_tag 'js/html5shiv' %>
		<%= javascript_include_tag 'js/respond.min' %>
	<![endif]-->
	<%= javascript_include_tag 'external/jquery/jquery.min' %>
	<%= javascript_include_tag 'external/bootstrap/bootstrap.min' %>
	<%= javascript_include_tag 'external/slick/slick.min' %>
	<%= javascript_include_tag 'external/waypoints/jquery.waypoints.min' %>
	<%= javascript_include_tag 'external/countto/jquery.countTo' %>
	<%= javascript_include_tag 'external/form/jquery.form' %>
	<%= javascript_include_tag 'external/form/jquery.validate.min' %>
	<%= javascript_include_tag 'site' %>
<% end %>
