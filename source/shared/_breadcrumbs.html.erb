<% if breadcrumbs.present? %>
  <div class="breadcrumb">
    <div class="container">
      <div class="row">
        <ul>
          <li><%= t('navigation.home') %></li>
          <% breadcrumbs.each do |breadcrumb| %>
            <li><%= t(breadcrumb) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
